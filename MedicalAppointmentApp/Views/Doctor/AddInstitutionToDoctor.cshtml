@using MedicalAppointmentApp.Models.ViewModels
@model CreateInstitutionDoctorViewModel
@{
    ViewData["Title"] = "Add Institution";
}

<h1>Selected Doctor Id: @Model.DoctorId</h1>

<form asp-action="AddInstitutionToDoctor" method="post">
    <div class="form-group">
        <label asp-for="DoctorId"></label>
        <input asp-for="DoctorId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="InstitutionId"></label>
        <input asp-for="InstitutionId" class="form-control" />
    </div>
    <div class="container">
        <div class="row">@{ int i = 0; }
            @foreach (var scheduleDetail in Model.scheduleDetails)
            {
            <div class="col-sm">
                <h4>@scheduleDetail.Day</h4>
                <div hidden>
                    <label asp-for="scheduleDetails[i].Day"></label>
                    <input type="text" asp-for="scheduleDetails[i].Day" />
                </div>
                <div class="time">
                    <label asp-for="scheduleDetails[i].isWorking"></label>
                    <input type="checkbox" asp-for="scheduleDetails[i].isWorking" />
                </div>
                <div class="time">
                    <label asp-for="scheduleDetails[i].StartDateTime"></label>
                    <input type="time" asp-for="scheduleDetails[i].StartDateTime" />
                </div>
                <div class="time">
                    <label asp-for="scheduleDetails[i].EndDateTime"></label>
                    <input type="time" asp-for="scheduleDetails[i].EndDateTime" />
                </div>
            </div>
                i++;
            }
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="table-responsive">
                    <table class="table no-wrap user-table mb-0">
                        <thead>
                            <tr>
                                <th scope="col" class="border-0 text-uppercase font-medium">Id</th>
                                <th scope="col" class="border-0 text-uppercase font-medium">Name</th>
                                <th scope="col" class="border-0 text-uppercase font-medium">Address</th>
                                <th scope="col" class="border-0 text-uppercase font-medium">Doctors</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var institution in Model.Institutions)
                            {
                                <tr>
                                    <td>
                                        <span class="font-medium mb-0">@institution.InstitutionId</span><br>
                                    </td>
                                    <td>
                                        <span class="font-medium mb-0">@institution.Name</span><br>
                                    </td>
                                    <td>
                                        <span class="font-medium mb-0">@institution.Address</span><br>
                                    </td>
                                    <td>
                                        @foreach (var schedule in institution.Schedules)
                                        {
                                            <span class="font-medium mb-0">@schedule.Doctor.FirstName @schedule.Doctor.LastName</span><br>
                                        }
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>