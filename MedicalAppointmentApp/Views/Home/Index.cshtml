@model List<GetDoctorsWithNextAppointment>
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h1 class="display-5">Sign up for a visit</h1>
    <!--<p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>-->
</div>



<form asp-controller="Home" asp-action="Index" method="get">
    <div class="input-group">
        <input type="search" class="form-control rounded" placeholder="Doctor, institution, speciality" aria-label="Search" aria-describedby="search-addon" name="q" />
        <button type="submit" class="btn btn-outline-primary"><i class="fas fa-search text-grey"
       aria-hidden="true"></i>
</button>
    </div>
</form>
@if (Model.Count > 0)
{
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="table-responsive">
                        <table class="table no-wrap user-table mb-0">
                            <thead>
                                <tr>
                                    <th scope="col" class="border-0 text-uppercase font-medium">First Name</th>
                                    <th scope="col" class="border-0 text-uppercase font-medium">Last Name</th>
                                    <th scope="col" class="border-0 text-uppercase font-medium">Phone Number</th>
                                    <th scope="col" class="border-0 text-uppercase font-medium">Medical Speciality</th>
                                    <th scope="col" class="border-0 text-uppercase font-medium">Institutions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var doctor in Model)
                                {
                                    <tr>
                                        <td>
                                            <a class="nav-link text-dark" asp-controller="Doctor" asp-action="Doctor" asp-route-id="@doctor.Doctor.DoctorId">@doctor.Doctor.FirstName</a>
                                        </td>
                                        <td>
                                            <span class="font-medium mb-0">@doctor.Doctor.LastName</span><br>
                                        </td>
                                        <td>
                                            <span class="font-medium mb-0">@doctor.Doctor.PhoneNumber</span><br>
                                        </td>
                                        <td>
                                            <span class="font-medium mb-0">@doctor.Doctor.MedicalSpeciality.Name</span><br>
                                        </td>
                                        <td>
                                            @foreach (var schedule in doctor.Doctor.Schedules)
                                            {
                                                <span class="font-medium mb-0">@schedule.Institution.Name</span><br>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

    